## ---------------------------------------------------------------------------
#if ($result.List.size() == 0)
<div class="message">$l10n.WORKFLOW_NO_WORKFLOW_TO_YOU</div>
#else
#ALformheader('Workflow' $jslink $portlet)
<table class="activityTable">
<tbody>
#AUISummaryDiv()
#AUIajaxpageview('WorkflowScreen' $result)
#AUISummaryDivfooter()
#foreach ($record in $result.List)
<tr>
<td>
<span class="date">$!record.UpdateDateTime &nbsp; $!record.ClientName</span>
<a href="javascript:void(0);" onclick="aipo.container.gadgetService.requestCheckActivity($record.ActivityId);aipo.common.showDialog('$!utils.escapeXML($!jslink.getPortletById($!portlet.ID).addQueryData("template","WorkflowDetailScreen").addQueryData('mode','detail').addQueryData('entityid',$record.RequestId).addQueryData('prvid',$record.RequestId))', '$!portlet.ID', aipo.workflow.onLoadWorkflowDetail);">
#if($record.Progress.Value == "D")
$l10n.WORKFLOW_APPLICATION 「$!record.CategoryName#if($!record.RequestName != '')：$!record.RequestName #end」 $l10n.WORKFLOW_DENIAL_MSG
#elseif($record.Progress.Value == "A")
$l10n.WORKFLOW_APPLICATION 「$!record.CategoryName#if($!record.RequestName != '')：$!record.RequestName #end」 $l10n.WORKFLOW_ACCEPT_MSG
#else
$l10n.WORKFLOW_APPLICATION 「$!record.CategoryName#if($!record.RequestName != '')：$!record.RequestName #end」 $l10n.WORKFLOW_REQUEST_MSG
#end
</a>
</td>
</tr>
#end
</tbody></table>
#ALformfooter()
#end
