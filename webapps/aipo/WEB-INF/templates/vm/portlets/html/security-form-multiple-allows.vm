	      	  <td>${l10n.SECURITY_FORM_MULTIPLE_ALLOWS_VALUE_VM}</td>
	      	  ##<td><input type="text" name="allow_value" value="$!data.parameters.getString("allow_value")"/></td>
	      	  
	      	  <td>
